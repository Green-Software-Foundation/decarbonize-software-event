---
const response = await fetch("https://graphql.datocms.com/", {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
    Accept: "application/json",
    Authorization: `Bearer ${import.meta.env.DATOCMS_API_KEY}`,
  },
  body: JSON.stringify({
    query: `query Logos {
                homepage {
                    steeringMembers {
                        companyWebsite
                        companyName
                        companyLogo {
                            url
                        }
                    }
                }
            }
        `,
  }),
});

const json = await response.json();
const members = json.data.homepage.steeringMembers;
---

<section class="container wrapper">
  <h1 class="section-title">GSF Steering Committee</h1>
  <div class="logos-wrapper">
    {
      members.map(({ companyLogo, companyName, companyWebsite }: any) => (
        <a
          class="logo"
          href={companyWebsite}
          target="_blank"
          rel="noopener noreferrer"
        >
          <img src={companyLogo.url} alt={companyName} />
        </a>
      ))
    }
  </div>
  <div>
    <a
      href="https://greensoftware.foundation/"
      target="_blank"
      rel="noopener noreferrer"
      class="button">Sell Full List</a
    >
  </div>
</section>
<style>
  .wrapper {
    text-align: center;
    margin-bottom: 5rem;
  }

  .logos-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
    justify-content: center;
    margin-bottom: 3rem;
  }
  .logo {
    filter: brightness(0) invert(1);
    height: 2.25rem;
    opacity: 0.6;
    transition: opacity 0.2s ease-in-out;
  }
  .logo:hover {
    opacity: 1;
  }
  .logo img {
    height: 100%;
  }
  @media (max-width: 1024px) {
    .logo {
      height: 1.5rem;
    }
  }
</style>
